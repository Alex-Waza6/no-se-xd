        <button id="no">No</button>
    </div>

    <script>
        let yesCount = 0;

        const vutonSi = document.getElementById('yes');
        const vutonNo = document.getElementById('no');

        // Respuestas al presionar "S铆"
        const responses = [
            'awww te re quiero sabias vrd?',
            'Eespera, lo presionaste 2 veces eso es mas q una confirmacion vrd?',
            'Naaa lo presionaste 3 veces te re amo'
        ];

        // Funci贸n para redirigir a YouTube
        const redirigir = () => {
            location.href = 'https://www.youtube.com/watch?v=gaA7RAy5rYg';
        };

        // Funci贸n para mover el bot贸n "No" aleatoriamente
        const moverNo = () => {
            const randomTop = Math.random() * window.innerHeight;
            const randomLeft = Math.random() * window.innerWidth;
            vutonNo.style.position = 'absolute';
            vutonNo.style.top = randomTop + 'px';
            vutonNo.style.left = randomLeft + 'px';
        };

        // L贸gica para el bot贸n "S铆"
        vutonSi.addEventListener('click', () => {
            yesCount++;

            if (yesCount <= 3) {
                alert(responses[yesCount - 1]);
            } else if (yesCount === 4) {
                redirigir(); // Redirigir a YouTube al 4掳 clic
            }
        });

        // L贸gica para el bot贸n "No"
        vutonNo.addEventListener('mouseover', moverNo); // Se mueve cuando el mouse pasa sobre 茅l
    </script>
